# /api/.htaccess
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/
    
    # Permitir acceso a archivos est√°ticos
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Redirigir todo a index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

